<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:background="@drawable/shape_white_radius_big"
			  android:orientation="vertical"
	android:paddingTop="36dp">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:layout_marginLeft="36dp"
		android:layout_marginRight="36dp"
		android:gravity="center"
		android:textColor="@color/c_font_default"
		android:textSize="@dimen/s_title"/>

	<TextView
		android:id="@+id/tv_tip"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="36dp"
		android:layout_marginLeft="36dp"
		android:layout_marginRight="36dp"
		android:gravity="center"
		android:textColor="@color/c_font_default"
		android:textSize="@dimen/s_normal"/>

	<View
		style="@style/sty_view_line5_05dpH"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="36dp"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_left"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="match_parent"
			android:background="@drawable/selector_white_bl"
			android:text="@string/cancel"
			android:textColor="@color/c_font_default"
			android:textSize="@dimen/s_normal"/>

		<View
			android:id="@+id/view_split"
			android:layout_width="0.5dp"
			android:layout_height="match_parent"
			android:background="@color/c_divider_1"/>

		<Button
			android:id="@+id/btn_right"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@drawable/selector_white_br"
			android:text="@string/sure"
			android:textColor="@color/c_bg_main"
			android:textSize="@dimen/s_normal"/>
	</LinearLayout>

</LinearLayout>